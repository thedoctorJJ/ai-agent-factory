# Use a slim Python image as the base
FROM python:3.11-slim

# Set the working directory in the container
WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy the requirements file and install dependencies
COPY requirements-mcp-http.txt .
RUN pip install --no-cache-dir -r requirements-mcp-http.txt

# Copy the HTTP MCP server script
COPY mcp-server-http.py .

# Make the script executable
RUN chmod +x mcp-server-http.py

# Expose the port
EXPOSE 8001

# Command to run the HTTP MCP server
# Cloud Run expects the application to listen on the port specified by the PORT environment variable
ENV PORT 8001
CMD ["python3", "mcp-server-http.py"]
